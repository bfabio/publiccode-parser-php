{
    "name": "bfabio/publiccode-parser-php",
    "description": "Parse and validate publiccode.yml files",
    "type": "library",
    "license": "BSD-3-Clause",
    "keywords": ["publiccode.yml", "parser", "public-administration"],
    "homepage": "https://github.com/bfabio/publiccode-parser-php",
    "authors": [
        {
            "name": "Fabio Bonelli",
            "email": "fb@fabiobonelli.it"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "ext-ffi": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5 || ^10.0",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Bfabio\\PublicCodeParser\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bfabio\\PublicCodeParser\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "phpstan": "vendor/bin/phpstan analyse",
        "cs": "vendor/bin/php-cs-fixer fix --dry-run --diff",
        "cs-fix": "vendor/bin/php-cs-fixer fix"
    }
}
